<!--フォームを表示するアクションは一度、ヘルパーのchoose_new_or_editメソッドで処理を制御する-->
<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit 'つぶやく', class: 'btn btn-primary btn-block'%>
<% end %>

<%= link_to "つぶやき一覧画面にもどる", tweets_path %>